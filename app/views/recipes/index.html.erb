<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<form method="input" action="/recipes">
  			Buscar receta por nombre: <input type="text" name="filter" />  
  			<input type="submit" />
		</form><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Featured</th>
      <th>Ingredients</th>
      <th>Steps</th>
      <th>Submit date</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Recipe type</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.featured %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.steps %></td>
        
        <td><%= link_to recipe.submit_date, recipes_path(:sort => true, :by => "submit_date", :order => (params[:order] == "asc" ? "desc" : "asc")) %></td>
        <td><%= recipe.image_url %></td>
        <td><%= recipe.category.name %></td>
        <td><%= recipe.recipe_type.name %></td>
        <td><%= recipe.author.first_name %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
